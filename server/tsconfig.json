{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",         // only src is compiled
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jasmine"]
  },
  "include": ["src"],    // only compile src
  "exclude": ["node_modules", "dist"]
}